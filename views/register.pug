doctype html
html
  head
    title= title
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    form(method="POST" action="")
      .container
        h3 Register
        p Please fill in this form to create an account.
        hr
        label(for="userName")
          b Username
        input#userName(type="text", placeholder="Enter username", name="userName", required)
        label(for="password")
          b Password
        input#password(type="password", placeholder="Enter Password", name="password", required)
        br
        p By creating an account you agree to our 
          a(href="#") Terms &amp; Privacy
          | .
        button.registerbtn(type="submit", class="btn btn-primary") Register
      .container.signin
        p Already have an account? 
          a(href="/users/login") Sign in
          | .

